/* 功能网格布局 */
.function-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 150rpx;
  padding: 20rpx;
}

.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 0;
  text-decoration: none;
}

.grid-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.grid-item text {
  font-size: 24rpx;
  color: #333;
}

/* 今日推荐区域 */
.today-suggest {
  padding: 20rpx;
  border-left: 15rpx solid #000000;
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}