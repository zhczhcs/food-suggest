/* 搜索框容器 */
.search-box {
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  border-radius: 40rpx; /* 圆角 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05); /* 阴影 */
  margin: 2rpx;
}

/* 搜索输入框 */
.search-input {
  margin-top: 140rpx;
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border: none; /* 去除边框 */
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-btn {
  margin-left: 20rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 20rpx;
}

/* 字母导航容器 */
.letter-nav {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

/* 字母导航列表 */
.letter-scroll {
  width: 40rpx;
  height: auto;
}



/* 字母导航项 */
.letter-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 50%;
  transition: all 0.2s ease-in-out; /* 过渡动画 */
}



/* 高亮字母导航项 */
.letter-item.active {
  background-color: #1aad19;
  color: #fff;
  font-weight: bold;
  transform: scale(1);
}

/* 食物列表（向右预留字母导航的空间） */
.food-list {
  width: calc(100% - 70rpx); /* 减去右侧字母导航的宽度 */
  height: calc(100vh - 270rpx); /* 减去头部和搜索栏高度 */
  background-color: #f9f9f9;
}

/* 字母分组标题 */
.group-title {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  background-color: #f0f0f0;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  position: sticky; /* 分组标题滚动时固定在顶部 */
  top: 0;
  z-index: 5;
}

/* 食物项容器 */
.food-items {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
}

/* 调整 food-item 内部结构，使其图片和文字垂直居中 */
.food-item {
  width: 190rpx; /* 每个食物项的宽度 */
  height: 230rpx; /* 增加高度以容纳图片和文字 */
  margin: 10rpx;
  background-color: #fff;
  border-radius: 12rpx; /* 圆角 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column; /* 垂直布局 */
  align-items: center; /* 水平居中 */
  justify-content: flex-start; /* 内容顶部对齐 */
  overflow: hidden; /* 防止内容溢出 */
  position: relative; /* 用于选中标记的定位 */
}

/* 新增：图片容器样式 */
.food-img-container {
  width: 160rpx; /* 图片的实际显示宽度 */
  height: 160rpx; /* 图片的实际显示高度 */
  border-radius: 8rpx; /* 图片圆角 */
  overflow: hidden;
  position: relative; /* 用于选中标记的绝对定位 */
  margin-top: 15rpx; /* 图片顶部间距 */
  display: flex; /* 确保图片居中 */
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease-in-out; /* 添加过渡效果 */
}

/* 食物图片样式 */
.food-img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 裁剪图片以填充容器 */
} 
/* **修改：选中图片容器的样式 (保持不变)** */
.food-img-container.selected-border {
  border: 4rpx solid #3498db; /* 蓝色边框 */
  box-shadow: 0 0 15rpx rgba(52, 152, 219, 0.5); /* 蓝色阴影 */
}

/* 食物名称样式 */
.food-name {
  font-size: 26rpx;
  color: #333;
  margin-top: 15rpx; /* 图片和文字间距 */
  text-align: center;
  width: 100%; /* 确保文字宽度 */
  padding: 0 10rpx; /* 左右内边距防止文字太靠近边缘 */
  box-sizing: border-box;
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 溢出隐藏 */
  text-overflow: ellipsis; /* 显示省略号 */
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* **核心修改：选中标记样式，使其更突出** */
.selected-checkmark {
  position: absolute;
  top: 8rpx; /* 稍微向内移动 */
  right: 8rpx; /* 稍微向内移动 */
  background-color: #3498db; /* 完全不透明的蓝色背景 */
  color: #fff;
  border-radius: 50%;
  width: 48rpx; /* 增大尺寸 */
  height: 48rpx; /* 增大尺寸 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx; /* 增大字体 */
  font-weight: bold;
  z-index: 10; /* 确保 z-index 足够高，高于图片容器的 z-index (默认0或1) */
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3); /* 增加阴影，使其有浮动感 */
}

/* 对比模式切换按钮 */
.compare-toggle-button {
  position: fixed;
  bottom: 150rpx; /* 距离底部 */
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #333;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
  transition: all 0.2s ease-in-out;
}

.compare-toggle-button.active {
  background-color: #e74c3c; /* 红色表示取消 */
  color: #fff;
}

/* 对比按钮 */
.compare-button {
  position: fixed;
  bottom: 40rpx; /* 距离底部 */
  right: 40rpx;
  width: 200rpx; /* 按钮宽度 */
  height: 80rpx; /* 按钮高度 */
  border-radius: 40rpx; /* 圆角 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  transition: background-color 0.2s ease-in-out;
}

.compare-button.disabled {
  background-color: #ccc;
  color: #888;
}

.compare-button.active {
  background-color: #3498db; /* 蓝色 */
  color: #fff;
}
