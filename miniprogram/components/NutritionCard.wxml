<!-- components/NutritionCard/NutritionCard.wxml -->
<view class="nutrition-card {{type === 'suggest' ? 'suggest-style' : 'normal-style'}}">
  <view class="card-header">
    <text class="title">{{title}}</text>
    <text class="tag" wx:if="{{tag}}">{{tag}}</text>
  </view>
  <view class="card-content">
    <view wx:for="{{nutrients}}" wx:key="name" class="nutrient-item">
      <text class="name">{{item.name}}:</text>
      <text class="value">{{item.value}}{{item.unit}}</text>
    </view>
    <view class="desc" wx:if="{{desc}}">{{desc}}</view>
  </view>
  <view class="card-actions" wx:if="{{actions.length > 0}}">
    <button 
      wx:for="{{actions}}" 
      wx:key="index" 
      class="action-btn" 
      bindtap="onActionTap" 
      data-index="{{index}}"
    >
      {{item.text}}
    </button>
  </view>
</view>