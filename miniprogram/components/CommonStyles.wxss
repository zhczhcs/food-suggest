/*CommonStyles.wxss*/
/* 页面容器 */
.container {
  background-color: #F5F5F5;
  padding: 20rpx;
  height: 100vh;
  margin-top: 40rpx;
  box-sizing: border-box;
}

/* 白色卡片 */
.card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 100rpx;
  padding: 95rpx;
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 表单项 */
.form-item {
  display: flex; /* 使用 flexbox 布局 */
  justify-content: space-between; /* 左右对齐 */
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #E5E5E5; /* 分割线 */
}

/* 标签 */
.label {
  font-size: 30rpx;
  color: #333333;
  width: 180rpx; /* 固定标签宽度 */
  text-align: left; /* 标签左对齐 */
  margin-right: 20rpx; /* 【新增】标签右边距 */
}

/* 数值 */
.value {
  font-size: 30rpx;
  color: #666666;
  text-align: right; /* 数值右对齐 */
  flex: 1; /* 数值占据剩余空间 */
  margin-left: 40rpx; /* 【新增】数值左边距 */
}

/* 输入框 */
.form-item input {
  text-align: right;
  font-size: 30rpx;
  color: #666666;
  border: 1px solid #E5E5E5;
  border-radius: 10rpx;
  padding: 15rpx;
}

/* 单选框组 */
.radio-group {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

/* 单选框 */
.radio {
  display: inline-flex;
  align-items: center;
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #666666;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

/* 编辑按钮 */
.edit-button,
.cancel-button {
  background-color: #FFFFFF;
  border: 1px solid #3498db;
  color: #3498db;
  font-size: 32rpx;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
}

/* 保存按钮 */
.save-button {
  background-color: #3498db;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
}